<?xml version="1.0"?>
<ruleset name="PSR12">
    <description>The PSR12 coding standard.</description>
    <rule ref="PSR12"/>

    <!-- Scan these directories -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <!-- <file>packages</file> -->

    <!-- Scan only PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Exclude folders -->
    <!-- <exclude-pattern></exclude-pattern> -->

    <!-- Memory limit -->
    <ini name="memory_limit" value="1028M"/>
</ruleset>
